# frozen_string_literal: true

source 'https://rubygems.org'

ruby '>= 3.0'

# HTTP client for Strava API
gem 'faraday', '~> 2.7'
gem 'faraday-multipart', '~> 1.0'

# OAuth2 for Strava authentication
gem 'oauth2', '~> 2.0'

# SQLite database
gem 'sqlite3', '~> 1.6'

# JSON parsing (stdlib but explicit)
gem 'json', '~> 2.6'

# CLI interface
gem 'thor', '~> 1.3'

# Web server for OAuth callback (during initial auth)
gem 'webrick', '~> 1.8'

# ERB for HTML templating (stdlib)
gem 'erb', '~> 4.0'

group :development do
  gem 'rubocop', '~> 1.50'
end
